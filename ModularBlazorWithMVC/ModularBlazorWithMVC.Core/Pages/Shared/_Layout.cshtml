@using ModularBlazorWithMVC.Core.Shared

@namespace ModularBlazorWithMVC.Core.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <div class="sidebar">
            <component type="typeof(NavMenu)" render-mode="ServerPrerendered" />
        </div>

        <div class="main">
            <div class="top-row px-4">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">Baeren-Code</a>
            </div>

            <div class="content px-4">
                @RenderBody()
            </div>
        </div>
    </app>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
